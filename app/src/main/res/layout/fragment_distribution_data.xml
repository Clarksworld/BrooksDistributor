<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".distribution_data.DistributionDataFragment">

   <com.google.android.material.card.MaterialCardView
       android:id="@+id/app_card"
       android:layout_marginTop="@dimen/hundred_fifty_dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:layout_marginLeft="@dimen/ten_dp"
       app:cardCornerRadius="@dimen/five_dp"
       app:cardElevation="@dimen/five_dp"
       android:layout_marginRight="@dimen/ten_dp">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="@dimen/ten_dp"
           android:layout_marginBottom="@dimen/twenty_dp">


           <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/name_layout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toTopOf="parent"
               android:layout_marginRight="@dimen/ten_dp"
               android:layout_marginLeft="@dimen/ten_dp"
               android:padding="@dimen/ten_dp">

               <TextView
                   android:id="@+id/text_dashboard"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/sixteen_sp"
                   android:text="Name"
                   android:textColor="@color/light_text_color"
                   android:fontFamily="@font/poppins_medium"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent" />

               <TextView
                   android:id="@+id/text_name"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/sixteen_sp"
                   android:fontFamily="@font/poppins_semibold"
                   android:text="Kendrick Oma"
                   android:textColor="@color/dark_text_color"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintTop_toTopOf="parent" />

           </androidx.constraintlayout.widget.ConstraintLayout>


           <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/size_layout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@id/name_layout"
               android:padding="@dimen/ten_dp"
               android:layout_marginTop="@dimen/five_dp"
               android:layout_marginRight="@dimen/ten_dp"
               android:layout_marginLeft="@dimen/ten_dp">

               <TextView
                   android:id="@+id/text_size_dashboard"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/sixteen_sp"
                   android:text="size(cl)"
                   android:textColor="@color/light_text_color"
                   android:fontFamily="@font/poppins_medium"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent" />

               <TextView
                   android:id="@+id/text_size"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/sixteen_sp"
                   android:fontFamily="@font/poppins_semibold"
                   android:text="75cl"
                   android:textColor="@color/dark_text_color"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintTop_toTopOf="parent" />

           </androidx.constraintlayout.widget.ConstraintLayout>

           <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/quantity_layout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@id/size_layout"
               android:padding="@dimen/ten_dp"
               android:layout_marginTop="@dimen/five_dp"
               android:layout_marginRight="@dimen/ten_dp"
               android:layout_marginLeft="@dimen/ten_dp">

               <TextView
                   android:id="@+id/text_quantity_dashboard"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/sixteen_sp"
                   android:text="Quantity"
                   android:textColor="@color/light_text_color"
                   android:fontFamily="@font/poppins_medium"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent" />

               <TextView
                   android:id="@+id/text_quantity"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/sixteen_sp"
                   android:fontFamily="@font/poppins_semibold"
                   android:text="20 cartons"
                   android:textColor="@color/dark_text_color"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintTop_toTopOf="parent" />

           </androidx.constraintlayout.widget.ConstraintLayout>


           <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/phone_layout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@id/quantity_layout"
               android:padding="@dimen/ten_dp"
               android:layout_marginTop="@dimen/five_dp"
               android:layout_marginRight="@dimen/ten_dp"
               android:layout_marginLeft="@dimen/ten_dp">

               <TextView
                   android:id="@+id/text_phone_dashboard"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/sixteen_sp"
                   android:text="Phone Number"
                   android:textColor="@color/light_text_color"
                   android:fontFamily="@font/poppins_medium"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent" />

               <TextView
                   android:id="@+id/text_phone"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/sixteen_sp"
                   android:fontFamily="@font/poppins_semibold"
                   android:text="07024569851"
                   android:textColor="@color/dark_text_color"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintTop_toTopOf="parent" />

           </androidx.constraintlayout.widget.ConstraintLayout>


           <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/address_layout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@id/phone_layout"
               android:padding="@dimen/ten_dp"
               android:layout_marginTop="@dimen/five_dp"
               android:layout_marginRight="@dimen/ten_dp"
               android:layout_marginLeft="@dimen/ten_dp">

               <TextView
                   android:id="@+id/text_address_dashboard"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/sixteen_sp"
                   android:text="Address"
                   android:textColor="@color/light_text_color"
                   android:fontFamily="@font/poppins_medium"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent" />

               <TextView
                   android:id="@+id/text_address"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/sixteen_sp"
                   android:fontFamily="@font/poppins_semibold"
                   android:text="15 Udo ekong, Uyo"
                   android:textColor="@color/dark_text_color"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintTop_toTopOf="parent" />

           </androidx.constraintlayout.widget.ConstraintLayout>

       </androidx.constraintlayout.widget.ConstraintLayout>


   </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/text_instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sixteen_sp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/direction_instruction"
        android:textColor="@color/dark_text_color"
        android:layout_marginLeft="@dimen/fifteen_dp"
        android:layout_marginRight="@dimen/fifteen_dp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_card"
        android:layout_marginTop="@dimen/thirty_dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/open_map_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Open map"
        android:background="@drawable/curve_ten_buton"
        android:backgroundTint="@color/purple_500"
        app:layout_constraintTop_toBottomOf="@id/text_instruction"
        android:layout_marginTop="@dimen/twenty_dp"
        android:layout_marginLeft="@dimen/thirty_dp"
        android:layout_marginRight="@dimen/thirty_dp"
        android:textColor="@color/white"
        android:textSize="@dimen/sixteen_sp"
        android:fontFamily="@font/poppins_semibold"
        android:padding="@dimen/fifteen_dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>